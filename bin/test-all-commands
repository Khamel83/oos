#!/bin/bash

# OOS COMMAND TESTING FRAMEWORK
# =============================
# Tests every documented command to ensure they work as described

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_ROOT="$(cd "$SCRIPT_DIR/.." && pwd)"

echo "🧪 OOS COMMAND TESTING FRAMEWORK"
echo "================================"
echo ""

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

PASSED=0
FAILED=0
SKIPPED=0

test_command() {
    local command="$1"
    local expected_behavior="$2"

    echo -n "Testing $command... "

    # Extract command name without /
    local cmd_name="${command#/}"
    local impl_file="$PROJECT_ROOT/bin/claude-$cmd_name.sh"
    local alt_impl="$PROJECT_ROOT/bin/$cmd_name"

    # Check if implementation exists
    if [ -f "$impl_file" ] && [ -x "$impl_file" ]; then
        if timeout 10 "$impl_file" --help >/dev/null 2>&1 || \
           timeout 10 "$impl_file" -h >/dev/null 2>&1; then
            echo -e "${GREEN}PASS${NC}"
            PASSED=$((PASSED + 1))
        else
            echo -e "${RED}FAIL (no help)${NC}"
            FAILED=$((FAILED + 1))
        fi
    elif [ -f "$alt_impl" ] && [ -x "$alt_impl" ]; then
        if timeout 10 "$alt_impl" --help >/dev/null 2>&1 || \
           timeout 10 "$alt_impl" -h >/dev/null 2>&1; then
            echo -e "${GREEN}PASS${NC}"
            PASSED=$((PASSED + 1))
        else
            echo -e "${RED}FAIL (no help)${NC}"
            FAILED=$((FAILED + 1))
        fi
    else
        echo -e "${RED}FAIL (not found)${NC}"
        FAILED=$((FAILED + 1))
    fi
}

# Test documented commands from README
echo "Testing commands documented in README.md:"
if [ -f "$PROJECT_ROOT/README.md" ]; then
    while IFS= read -r command; do
        test_command "$command" "should provide help"
    done < <(grep -o '/[a-zA-Z][a-zA-Z0-9-]*' "$PROJECT_ROOT/README.md" | sort -u)
fi

echo ""
echo "📊 Test Results:"
echo "=================="
echo -e "✅ Passed: $PASSED"
echo -e "❌ Failed: $FAILED"
echo -e "⏭️  Skipped: $SKIPPED"

if [ "$FAILED" -eq 0 ]; then
    echo -e "\n${GREEN}🎉 All command tests passed!${NC}"
    exit 0
else
    echo -e "\n${RED}🔧 Some commands need attention${NC}"
    exit 1
fi