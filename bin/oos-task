#!/usr/bin/env bash
# OOS Task System Wrapper
# Makes it easy to run task commands without remembering 'uv run'

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_ROOT="$(cd "$SCRIPT_DIR/.." && pwd)"

cd "$PROJECT_ROOT"

# Run task CLI through uv
exec uv run python -m src.oos_task_system.cli "$@"
