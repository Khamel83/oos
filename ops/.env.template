# Paths (relative for development, absolute for production)
OOS_DB=data/oos.db
OOS_DATA_ROOT=data
OOS_BACKUP_DIR=backups

# Google Sheets mirror (Service Account JSON or file path)
GOOGLE_SERVICE_ACCOUNT_JSON=
GOOGLE_SPREADSHEET_ID=

# Security (sops + age encryption)
SOPS_AGE_KEY_FILE=/opt/oos/config/age-key.txt

# Network Security
DATASETTE_HOST=127.0.0.1
DATASETTE_PORT=9090
SQLITE_WEB_HOST=127.0.0.1
SQLITE_WEB_PORT=8080

# Alerts (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
UPTIME_KUMA_URL=
UPTIME_KUMA_PUSH_KEY=

# Optional: OCI Object Storage for cold exports
OCI_BUCKET_NAME=
OCI_NAMESPACE=
OCI_REGION=

# Reliability Settings
SQLITE_BUSY_TIMEOUT=5000
BACKUP_RETENTION_DAYS=7
COLD_EXPORT_RETENTION_WEEKS=4

# Audit and Logging
LOG_LEVEL=INFO
LOG_FORMAT=jsonl
AUDIT_ENABLED=true